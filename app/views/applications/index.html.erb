<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <h2 class="mb-4">My Applications</h2>

  <table id="coursesTable" class="table table-striped table-bordered mt-3">
    <thead class="thead-light">
    <tr id="headerRow">
      <th class="text-center">Course Number</th>
      <th class="text-center">Term</th>
      <th class="text-center">Name</th>
      <th class="text-center">Subject</th>
      <th class="text-center">User</th>
      <th class="text-center">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @applications.where(user_id: current_user.id).each do |application| %>
      <tr>
        <td class="text-center"><%= application.course.course_number %></td>
        <td class="text-center"><%= application.course.term %></td>
        <td class="text-center"><%= application.course.name %></td>
        <td class="text-center"><%= application.course.subject %></td>
        <td class="text-center"><%= application.user.email %></td>
        <td class="text-center">
          <%= link_to "Show this Application", application, class: "btn btn-info" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to "New application", new_application_path, class: "btn btn-success" %>
</div>