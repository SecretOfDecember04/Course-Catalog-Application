<div class="container my-5">
  <div class="card">
    <div class="card-header">
      <h2>Editing Availability</h2>
    </div>

    <div class="card-body">
      <%= render "form", availability: @availability %>

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <%= link_to "Show this availability", @availability, class: 'btn btn-info' %>
        <%= link_to "Back to availabilities", availabilities_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>