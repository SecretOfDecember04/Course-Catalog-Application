<div class="container">
  <div class="py-5 text-center">
    <h2>My Availabilities</h2>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table id="availabilitiesTable" class="table table-striped table-hover">
          <thead>
          <tr id="headerRow">
            <th class="text-center">Day</th>
            <th class="text-center">Start Time</th>
            <th class="text-center">End Time</th>
          </tr>
          </thead>
          <tbody>
          <% @availabilities.where(user_id: current_user.id).each do |availability| %>
            <tr>
              <td class="text-center"><%= availability.day %></td>
              <td class="text-center"><%= availability.start_time.strftime("%I:%M %p") %></td>
              <td class="text-center"><%= availability.end_time.strftime("%I:%M %p") %></td>
              <td class="text-center"><%= link_to 'Show', availability, class: 'btn btn-info' %></td>
            </tr>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to 'New Availability', new_availability_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>