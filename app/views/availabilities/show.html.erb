<div class="container my-5">
  <div class="card">
    <div class="card-header">
      <h2>Availability Details</h2>
    </div>

    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <div class="card-body">
      <%= render @availability %>

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <%= link_to "Edit this availability", edit_availability_path(@availability), class: 'btn btn-warning' %>
        <%= link_to "Back to availabilities", availabilities_path, class: 'btn btn-secondary' %>
        <%= button_to "Destroy this availability", @availability, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>