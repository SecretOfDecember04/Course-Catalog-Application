<div class="container my-5">
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center">
    <h1>Users</h1>
    <%= link_to "New user", new_user_path, class: 'btn btn-primary' %>
  </div>

  <div id="users">
    <% @users.each do |user| %>
      <% if current_user == user || current_user.role != 'Student' %>
        <div class="card my-4">
          <div class="card-body">
            <%= render user %>
          </div>
          <div class="card-footer">
            <% if current_user == user %>
              <%= link_to "Show this user", user, class: 'btn btn-info' %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>