<div class="container my-5">
  <div class="card">
    <div class="card-header">
      <h2>Editing Recommendation</h2>
    </div>

    <div class="card-body">
      <%= render "form", recommendation: @recommendation %>

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <%= link_to "Show this recommendation", @recommendation, class: 'btn btn-info' %>
        <%= link_to "Back to recommendations", recommendations_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>