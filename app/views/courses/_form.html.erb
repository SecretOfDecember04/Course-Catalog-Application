<%= form_with(model: course, html: { class: 'needs-validation', novalidate: true }) do |form| %>

  <% if course.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(course.errors.count, "error") %> prohibited this course from being
        saved</h4>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :course_number %>
    <%= form.text_field :course_number, class: "form-control", placeholder: "Course number" %>
  </div>

  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: "form-control", placeholder: "Subject" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="form-group">
    <%= form.label :short_description %>
    <%= form.text_area :short_description, class: "form-control", rows: 3, placeholder: "Short description" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Description" %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.text_field :level, class: "form-control", placeholder: "Level" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>

<% end %>

