<div class="container my-5">
  <div class="card">
    <div class="card-header">
      <h2>Editing Section</h2>
    </div>

    <div class="card-body">
      <%= render "form", section: @section %>
    </div>

    <div class="card-footer d-flex justify-content-between">
      <%= link_to "Show this section", @section, class: 'btn btn-info' %>
      <%= link_to "Back to sections", sections_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>