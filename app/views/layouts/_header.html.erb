<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <% if user_signed_in? %>
      <a class="navbar-brand" href="<%= users_path %>">Welcome, <%= current_user.email %>!</a>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Applications', applications_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Course History', enrollments_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Availability', availabilities_path, class: 'nav-link' %>
          </li>
          <% if current_user.role == "Admin" %>
            <li class="nav-item">
              <%= link_to 'Recommendations', recommendations_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Admin Portal', admin_index_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Reload Courses', 'courses/reload', method: :get, class: "nav-link" %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    <% end %>
  </nav>
</header>
