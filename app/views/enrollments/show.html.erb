<div class="container my-5">
  <div class="card">
    <div class="card-header">
      <h2>Enrollment Details</h2>
    </div>

    <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <div class="card-body">
      <%= render @enrollment %>

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <%= link_to "Edit this enrollment", edit_enrollment_path(@enrollment), class: 'btn btn-warning' %>
        <%= link_to "Back to enrollments", enrollments_path, class: 'btn btn-secondary' %>
        <%= button_to "Destroy this enrollment", @enrollment, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>