<div class="container">
  <div class="py-5 text-center">
    <h2>My Course History</h2>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table id="enrollmentsTable" class="table table-striped table-hover">
          <thead>
          <tr id="headerRow">
            <th class="text-center">Course</th>
            <th class="text-center">Grade</th>
            <th class="text-center">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @enrollments.where(user_id: current_user.id).each do |enrollment| %>
            <tr>
              <td class="text-center"><%= enrollment.course_name %></td>
              <td class="text-center"><%= enrollment.grade %></td>
              <td class="text-center"><%= link_to 'Show', enrollment, class: 'btn btn-info' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to 'New Enrollment', new_enrollment_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>